<%= render "shared/header" %>

<div class="show_layout">
  <div class="project_show">
        <div class="pj_show_list">
          <div class="pj_show">
            <div class="pj_show_title">  
              プロジェクト名：
              <%= @project.title %>
            </div>
            <div class="pj_show_goal">
              プロジェクト目標：
              <%= @project.goal %>
            </div>
            <div class="pj_show_date">
              完工予定日：
              <%= @project.date %>
            </div>
          </div>
        </div>
        <div class="task_lists">
          <div class= "task_lists_label">
            タスク一覧
          </div>
          <div class= "task_list">
            <% @project.tasks.each do |task| %>
            <div class= "tasks">
              <div class="tasks_title">名称：<%=link_to task.title, project_task_path(@project, task) %></div>
              <div class="tasks_aim">目標/ねらい：<%= task.aim %></div>
              <div class="tasks_date">実施日：<%= task.date %></div>
            </div>
            <% end %>

          </div>

        </div> 
  </div>
  <div class="show_side" >
    <div class="task_new_link">
      <%= link_to "タスク作成", new_project_task_path(params[:id]),class:"task_new_name" %>
    </div>  
  </div>
</div>
